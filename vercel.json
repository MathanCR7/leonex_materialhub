{
  "version": 2,
  "builds": [
    {
      "src": "/leonex_materialhub_backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "/leonex_materialhub_frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/leonex_materialhub_backend/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/leonex_materialhub_frontend/dist/index.html"
    }
  ]
}